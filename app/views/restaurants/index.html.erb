<div class="container">
<h1>Restaurants</h1>
 <ul class="list-group">
  <% @restaurants.each do |restaurant| %>
    <li class="list-group-item p-4 m-4 border border-primary-subtle rounded" >
      <%= link_to restaurant.name, restaurant_path(restaurant), class:"btn btn-outline-secondary mb-4" %>
      <p><strong>Category: </strong><%= restaurant.category %></p>
      <p><strong>Address: </strong><%= restaurant.address %></p>
      <p><strong>Phone: </strong><%= restaurant.phone_number %></p>
    </li>
  <% end %>
 </ul>

<div class='align-items-end'>
<%= link_to "New restaurant", new_restaurant_path, class: 'btn btn-primary' %>
</div>
</div>
