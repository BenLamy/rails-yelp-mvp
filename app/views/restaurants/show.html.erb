<h2><%= @restaurant.name %></h2>
<p><strong>Category: </strong><%= @restaurant.category %></p>
<p><strong>Address: </strong><%= @restaurant.address %></p>
<p><strong>Phone: </strong><%= @restaurant.phone_number %></p>
<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, priority: [0], collection: [0,1,2,3,4,5] %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

<br>

<%= link_to "New review", new_restaurant_review_path(@restaurant) %>
<%= link_to "Back to restaurants", restaurants_path %>
